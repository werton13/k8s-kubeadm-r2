# ClusterRoleBinding to grant K8s cluster ro Access for a tenant admin
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: {{ tenant_cluster_ro_rolename }}
subjects:
- kind: User
  name: {{ tenant_k8s_admin_username }}
  apiGroup: rbac.authorization.k8s.io
roleRef:
  kind: ClusterRole
  name: {{ tenant_cluster_ro_rolename }}
  apiGroup: rbac.authorization.k8s.io