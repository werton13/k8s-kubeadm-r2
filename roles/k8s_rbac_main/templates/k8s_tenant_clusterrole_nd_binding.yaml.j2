# # ClusterRoleBinding to grant tenant-node-drainer role for a tenant admin
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: tenant-node-drainer
subjects:
- kind: User
  name: {{ tenant_k8s_admin_username }}
  apiGroup: rbac.authorization.k8s.io
roleRef:
  kind: ClusterRole
  name: tenant-node-drainer
  apiGroup: rbac.authorization.k8s.io